@model IEnumerable<InventoryManagement.AssetModel>

@{
    ViewBag.Title = "Asset Models";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>
    Manage Asset Models
    <a href="@Url.Action("Create", "AssetModels")" class="btn-primary btn-xs pull-right">
        <span class="glyphicon glyphicon-plus"></span>
        Add Asset Model
    </a>
</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
            <th>@Html.DisplayNameFor(model => model.AssetType.Type)</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        Html.RenderPartial("_tableRow", item);
    }


</table>
<!-- Default Bootstrap Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="form" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">   
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    
    $("#editModal").on("show.bs.modal", function (e) {
        var link = $(e.relatedTarget);
        $(this).find(".modal-body").load(link.attr("href"));      
    });
    $(document).on("hidden.bs.modal", function (e) {
        $(e.target).removeData("bs.modal").find(".modal-content").empty();
    }); 

</script>

